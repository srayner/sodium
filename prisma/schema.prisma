generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  username       String   @unique
  hashedPassword String
  name           String?
  image          String?
  verified       Boolean  @default(false)
  roleId         String
  role           Role     @relation(fields: [roleId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  ownedLocations  Location[]
  assignedTasks   Task[]
  taskCompletions TaskCompletion[]

  @@index([roleId])
}

// Enums for maintenance tracking
enum LocationStatus {
  EXCELLENT
  GOOD
  FAIR
  NEEDS_ATTENTION
  CRITICAL
}

enum ScheduleType {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
  CUSTOM
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskStatus {
  ACTIVE
  PAUSED
  ARCHIVED
}

// Hierarchical location model (house -> room -> area)
model Location {
  id             String          @id @default(cuid())
  name           String
  description    String?
  icon           String?
  color          String?
  sortOrder      Int             @default(0)
  parentId       String?
  parent         Location?       @relation("LocationHierarchy", fields: [parentId], references: [id])
  children       Location[]      @relation("LocationHierarchy")
  status         LocationStatus  @default(GOOD)
  statusOverride LocationStatus?
  ownerId        String
  owner          User            @relation(fields: [ownerId], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  tasks Task[]

  @@index([ownerId])
  @@index([parentId])
}

// Recurring maintenance task
model Task {
  id               String       @id @default(cuid())
  name             String
  description      String?
  instructions     String?
  locationId       String
  location         Location     @relation(fields: [locationId], references: [id])
  assigneeId       String?
  assignee         User?        @relation(fields: [assigneeId], references: [id])
  priority         TaskPriority @default(MEDIUM)
  status           TaskStatus   @default(ACTIVE)
  scheduleType     ScheduleType
  intervalDays     Int?
  dayOfWeek        Int?
  dayOfMonth       Int?
  monthOfYear      Int?
  estimatedMinutes Int?
  nextDueDate      DateTime?
  lastCompletedAt  DateTime?
  gracePeriodDays  Int          @default(0)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  completions TaskCompletion[]

  @@index([locationId])
  @@index([assigneeId])
  @@index([nextDueDate])
}

// Record of task completions
model TaskCompletion {
  id               String    @id @default(cuid())
  taskId           String
  task             Task      @relation(fields: [taskId], references: [id])
  completedById    String
  completedBy      User      @relation(fields: [completedById], references: [id])
  completedAt      DateTime  @default(now())
  notes            String?
  durationMinutes  Int?
  qualityRating    Int?
  photoUrls        String[]
  scheduledDueDate DateTime?
  createdAt        DateTime  @default(now())

  @@index([taskId])
  @@index([completedById])
  @@index([completedAt])
}
